<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
  xsi:type="TaskPaneApp"
  Version="1.0.0.0">

  <!-- ====== PODSTAWY ====== -->
  <!-- ZMIEŃ NA WŁASNY GUID (np. użyj 'uuidgen') -->
  <Id>7b9e5d2d-2d3c-4a8c-9f0a-2db9a9e0a001</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>AddNap</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>


  <DisplayName DefaultValue="Word Tiles Add-in"/>
  <Description DefaultValue="Tiles based on Content Controls with Inspector and validation."/>

  <!-- Ikony bazowe (dla starszych hostów) -->
  <IconUrl DefaultValue="assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="assets/icon-80.png"/>

  <SupportUrl DefaultValue="https://example.com/support"/>

  <!-- Host: Word Document -->
  <Hosts>
    <Host Name="Document"/>
  </Hosts>

  <!-- Wymagania API: dopasuj do faktycznie używanych funkcji -->
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="WordApi" MinVersion="1.3"/>
    </Sets>
  </Requirements>

  <!-- Ustawienia domyślne: plik panelu -->
  <DefaultSettings>
    <SourceLocation DefaultValue="taskpane.html"/>
  </DefaultSettings>

  <!-- Uprawnienia: edycja dokumentu -->
  <Permissions>ReadWriteDocument</Permissions>

  <!-- ====== VERSION OVERRIDES ====== -->
  <VersionOverrides xsi:type="ov:VersionOverrides" Version="1.0">

    <!-- Definicja komend (wstążka) dla Word -->
    <ov:Hosts>
      <ov:Host xsi:type="ov:Document">
        <ov:DesktopFormFactor>

          <!-- Plik z funkcjami komend (commands.html) -->
          <ov:FunctionFile resid="residCommandsHtml"/>

          <!-- Wstążka: grupa "Tiles" na karcie Home -->
          <ov:ExtensionPoint xsi:type="ov:PrimaryCommandSurface">
            <ov:OfficeTab id="TabHome">
              <ov:Group id="grpTiles" label="Tiles" icon="icon32">
                <ov:Label resid="residGroupLabel"/>

                <ov:Icon>
                  <ov:bt:Image size="16" resid="icon16"/>
                  <ov:bt:Image size="32" resid="icon32"/>
                  <ov:bt:Image size="80" resid="icon80"/>
                </ov:Icon>

                <!-- Przycisk uruchamiający walidator -->
                <ov:Control xsi:type="ov:Button" id="btnValidate">
                  <ov:Label resid="residValidateLabel"/>
                  <ov:Supertip>
                    <ov:Title resid="residValidateTitle"/>
                    <ov:Description resid="residValidateDesc"/>
                  </ov:Supertip>
                  <ov:Icon>
                    <ov:bt:Image size="16" resid="icon16"/>
                    <ov:bt:Image size="32" resid="icon32"/>
                    <ov:bt:Image size="80" resid="icon80"/>
                  </ov:Icon>
                  <ov:Action xsi:type="ov:ExecuteFunction">
                    <ov:FunctionName>validateTilesCommand</ov:FunctionName>
                  </ov:Action>
                </ov:Control>

                <!-- Przycisk otwierający panel (na wypadek, gdyby był zamknięty) -->
                <ov:Control xsi:type="ov:Button" id="btnShowPane">
                  <ov:Label resid="residShowPaneLabel"/>
                  <ov:Supertip>
                    <ov:Title resid="residShowPaneTitle"/>
                    <ov:Description resid="residShowPaneDesc"/>
                  </ov:Supertip>
                  <ov:Icon>
                    <ov:bt:Image size="16" resid="icon16"/>
                    <ov:bt:Image size="32" resid="icon32"/>
                    <ov:bt:Image size="80" resid="icon80"/>
                  </ov:Icon>
                  <ov:Action xsi:type="ov:ShowTaskpane">
                    <ov:SourceLocation resid="residTaskpaneHtml"/>
                  </ov:Action>
                </ov:Control>

              </ov:Group>
            </ov:OfficeTab>
          </ov:ExtensionPoint>

        </ov:DesktopFormFactor>
      </ov:Host>
    </ov:Hosts>

    <!-- Zasoby: URL-e, obrazy i stringi wykorzystywane wyżej -->
    <ov:Resources>
      <!-- Ikony -->
      <ov:bt:Images>
        <ov:bt:Image id="icon16" DefaultValue="assets/icon-16.png"/>
        <ov:bt:Image id="icon32" DefaultValue="assets/icon-32.png"/>
        <ov:bt:Image id="icon80" DefaultValue="assets/icon-80.png"/>
      </ov:bt:Images>

      <!-- Adresy plików HTML -->
      <ov:bt:Urls>
        <ov:bt:Url id="residTaskpaneHtml" DefaultValue="taskpane.html"/>
        <ov:bt:Url id="residCommandsHtml" DefaultValue="commands.html"/>
      </ov:bt:Urls>

      <!-- Etykiety krótkie -->
      <ov:bt:ShortStrings>
        <ov:bt:String id="residGroupLabel" DefaultValue="Tiles"/>
        <ov:bt:String id="residValidateLabel" DefaultValue="Tiles Inspector"/>
        <ov:bt:String id="residValidateTitle" DefaultValue="Validate tiles in the document"/>
        <ov:bt:String id="residShowPaneLabel" DefaultValue="Open Tiles Pane"/>
        <ov:bt:String id="residShowPaneTitle" DefaultValue="Show the Tiles task pane"/>
      </ov:bt:ShortStrings>

      <!-- Opisy dłuższe (supertipy) -->
      <ov:bt:LongStrings>
        <ov:bt:String id="residValidateDesc" DefaultValue="Run validation to detect duplicate names, missing required fields, and unmatched START/END condition anchors."/>
        <ov:bt:String id="residShowPaneDesc" DefaultValue="Open the Tiles task pane with buttons to insert Text, Table, Image, and Condition tiles."/>
      </ov:bt:LongStrings>
    </ov:Resources>

  </VersionOverrides>
</OfficeApp>
